<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.refactorFragments.UpdateItemFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentUpdateItem_toolbar"
        style="@style/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorWhite" />

    <TextView
        android:id="@+id/fragmentUpdateItem_textView"
        style="@style/textView_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_toolbar" />

    <EditText
        android:id="@+id/fragmentUpdateItem_name"
        style="@style/editText_text"
        android:autofillHints=""
        android:drawableStart="@drawable/custom_object"
        android:hint="@string/et_hint_objectName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_textView" />

    <EditText
        android:id="@+id/fragmentUpdateItem_address"
        style="@style/editText_text"
        android:autofillHints=""
        android:drawableStart="@drawable/custom_location"
        android:hint="@string/et_hint_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_name" />

    <EditText
        android:id="@+id/fragmentUpdateItem_objectPhone"
        style="@style/editText_phone"
        android:autofillHints=""
        android:drawableStart="@drawable/custom_contact_phone"
        android:hint="@string/et_hint_object_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_address" />

    <EditText
        android:id="@+id/fragmentUpdateItem_mobilePhone"
        style="@style/editText_phone"
        android:autofillHints=""
        android:drawableStart="@drawable/custom_contact_phone"
        android:hint="@string/et_hint_mobile_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_objectPhone" />

    <EditText
        android:id="@+id/fragmentUpdateItem_kurator"
        style="@style/editText_text"
        android:autofillHints=""
        android:drawableStart="@drawable/custom_person_add"
        android:hint="@string/et_hint_kurator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_mobilePhone" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field00"
        style="@style/checkbox"

        android:autofillHints=""
        android:text="@string/_00_00"
        app:layout_constraintEnd_toStartOf="@+id/fragmentUpdateItem_field02"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_kurator" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field02"
        style="@style/checkbox"
        android:autofillHints=""
        android:text="@string/_02_00"
        app:layout_constraintEnd_toEndOf="@+id/fragmentUpdateItem_field15"
        app:layout_constraintStart_toStartOf="@+id/fragmentUpdateItem_field08"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_kurator" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field04"
        style="@style/checkbox"
        android:autofillHints=""
        android:text="@string/_04_00"
        app:layout_constraintStart_toEndOf="@+id/fragmentUpdateItem_field02"
        tools:layout_editor_absoluteY="332dp"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_kurator"
        />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field06"
        style="@style/checkbox"
        android:autofillHints=""
        android:text="@string/_06_00"
        app:layout_constraintStart_toEndOf="@+id/fragmentUpdateItem_field04"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_kurator" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field08"
        style="@style/checkbox"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:text="@string/_08_00"
        app:layout_constraintEnd_toStartOf="@+id/fragmentUpdateItem_field15"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_field02" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field15"
        style="@style/checkbox"
        android:autofillHints=""
        android:text="@string/_15_00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_field02" />

    <CheckBox
        android:id="@+id/fragmentUpdateItem_field21"
        style="@style/checkbox"
        android:autofillHints=""
        android:text="@string/_21_00"
        app:layout_constraintStart_toEndOf="@+id/fragmentUpdateItem_field15"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateItem_field02" />

    <Button
        android:id="@+id/fragmentUpdateNewItem_button"
        style="@style/button_blue_save"
        android:foreground="?attr/selectableItemBackground"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>