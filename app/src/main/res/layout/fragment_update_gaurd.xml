<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.refactorFragments.UpdateGuardFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentUpdateGuard_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/toolBar"
        app:titleTextColor="@color/colorWhite" />

    <TextView
        android:id="@+id/fragmentUpdateGuardName_textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edtxt_height"
        android:layout_margin="@dimen/margin_main"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuard_toolbar" />


    <EditText
        android:id="@+id/fragmentUpdateGuardName"
        android:autofillHints=""
        android:hint="@string/edttxt_hint_name"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/editText_text"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardName_textView" />

    <EditText
        android:id="@+id/fragmentUpdateGuardAddress"
        android:autofillHints=""
        android:hint="@string/edttxt_hint_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardName"
        style="@style/editText_text" />

    <EditText
        android:id="@+id/fragmentUpdateGuardPhone"
        android:autofillHints=""
        android:hint="@string/edttxt_hint_objectphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardAddress"
        style="@style/editText_phone"
        />

    <EditText
        android:id="@+id/fragmentUpdateGuardMobilePhone"
        android:autofillHints=""
        android:hint="@string/edttxt_hint_mobilephone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/editText_phone"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardPhone" />

    <EditText
        android:id="@+id/fragmentUpdateGuardKurator"
        android:autofillHints=""
        android:layout_margin="@dimen/margin_main"
        android:hint="@string/edttxt_hint_kurator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardMobilePhone"
        style="@style/editText_text"
        />

    <Button
        android:id="@+id/fragmentUpdateGuardButtonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_main"
        android:background="@color/eliteColorLight"
       android:foreground="@drawable/custom_ripple"
        android:text="@string/menu_save"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>