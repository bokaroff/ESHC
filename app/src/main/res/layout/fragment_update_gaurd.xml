<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.refactorFragments.UpdateGuardFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentUpdateGuard_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/toolBar"
        app:titleTextColor="@color/colorWhite" />

    <TextView
        android:id="@+id/fragmentUpdateGuard_textView"
        style="@style/textView_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuard_toolbar"
        />

    <EditText
        android:id="@+id/fragmentUpdateGuardName"
        android:autofillHints=""
        android:hint="@string/et_hint_name"
        android:drawableStart="@drawable/custom_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/editText_text"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuard_textView" />

    <EditText
        android:id="@+id/fragmentUpdateGuardAddress"
        android:autofillHints=""
        android:hint="@string/et_hint_address"
        android:drawableStart="@drawable/custom_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardName"
        style="@style/editText_text" />

    <EditText
        android:id="@+id/fragmentUpdateGuardPhone"
        android:autofillHints=""
        android:hint="@string/et_hint_object_phone"
        android:drawableStart="@drawable/custom_contact_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardAddress"
        style="@style/editText_phone"
        />

    <EditText
        android:id="@+id/fragmentUpdateGuardMobilePhone"
        android:autofillHints=""
        android:hint="@string/et_hint_mobile_phone"
        android:drawableStart="@drawable/custom_contact_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/editText_phone"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardPhone" />

    <EditText
        android:id="@+id/fragmentUpdateGuardKurator"
        android:autofillHints=""
        android:layout_margin="@dimen/margin_main"
        android:hint="@string/et_hint_kurator"
        android:drawableStart="@drawable/custom_person_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateGuardMobilePhone"
        style="@style/editText_text"
        />

    <Button
        android:id="@+id/fragmentUpdateGuardButtonSave"
        style="@style/button_blue_save"
        app:backgroundTint ="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>