<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/eliteColorLight</item>
        <item name="colorPrimaryDark">@color/eliteColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Splash Theme -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>


    <!-- TabStyle -->
    <style name="myTab" parent="TextAppearance.Design.Tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- EditTextStyle -->
    <style name="editText_phone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">phone|textMultiLine</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="editText_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textPersonName|textMultiLine</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:layout_margin">@dimen/margin_4dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/custom_checkbox</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <!-- ToolBarStyle -->
    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/eliteColor</item>
    </style>

    <!-- ButtonStyle -->
    <style name="button_blue_save">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">@color/eliteColorLight</item>
        <item name="android:foreground">@drawable/custom_ripple</item>
        <item name="android:elevation">@dimen/margin_4dp</item>
        <item name="android:text">@string/menu_save</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>