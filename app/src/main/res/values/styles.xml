<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_dark</item>
        <item name="colorPrimaryDark">@color/material_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Splash Theme -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>


    <!-- TabStyle -->
    <style name="myTab" parent="TextAppearance.Design.Tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearance.App.CornerCut" parent="">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.BottomRightCornerCut" parent="">
        <item name="cornerSize">20%</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="shapeImageView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:background">@drawable/ic_camera</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="shapeImageView_small">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <!-- TextViewStyle -->
    <style name="textView_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rv_item_phone_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/eliteColorLight</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="rv_simple_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/eliteColorLight</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="rv_item_name_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditTextStyle -->
    <style name="editText_phone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">phone|textMultiLine</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="editText_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textPersonName|textMultiLine</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="editText_text_short">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textPersonName|textEmailAddress</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>


    <!-- TextViewStyle_Calendar -->
    <style name="textView_calendar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_main</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/custom_input_calendar</item>
    </style>


    <!-- checkboxStyle -->
    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/custom_checkbox</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <!-- ToolBarStyle -->
    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/material_blue</item>
    </style>

    <!-- ButtonStyle -->
    <style name="button_blue_save">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:background">@drawable/custom_button_save</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:text">@string/menu_save</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="button_blue_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:background">@drawable/custom_button_save</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- FabStyle -->
    <style name="fab">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleGravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:elevation">@dimen/margin_4dp</item>
    </style>

    <!-- ConstraintStyle -->
    <style name="constraint_bottom_sheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- RecyclerContainer -->
    <style name="rv_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_main</item>
    </style>

    <!-- CardView -->

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>

</resources>